		</init-param>
	</servlet>
	<!-- Caching demo application that demonstrates paint optimization -->
	<servlet>
		<servlet-name>CachingDemo</servlet-name>
		<servlet-class>com.itmill.toolkit.terminal.gwt.server.ApplicationServlet</servlet-class>
